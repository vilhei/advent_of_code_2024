    "version": "0.2.0",
    "configurations": [
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug unit tests in library 'advents'",
            "cargo": {
                "args": [
                    "test",
                    "--no-run",
                    "--lib",
                    "--package=advent_of_code_template"
                ],
                "filter": {
                    "name": "advents",
                    "kind": "lib"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}"
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug executable 'advent_of_code_2022'",
            "cargo": {
                "args": [
                    "build",
                    "--bin=advent_of_code_2022",
                    "--package=advent_of_code_template"
                ],
                "filter": {
                    "name": "advent_of_code_2022",
                    "kind": "bin"
                }
            },
            "args": ["4"],
            "cwd": "${workspaceFolder}"
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug unit tests in executable 'advent_of_code_2022'",
            "cargo": {
                "args": [
                    "test",
                    "--no-run",
                    "--bin=advent_of_code_2022",
                    "--package=advent_of_code_template"
                ],
                "filter": {
                    "name": "advent_of_code_2022",
                    "kind": "bin"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}"
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug benchmark 'advent_bench'",
            "cargo": {
                "args": [
                    "test",
                    "--no-run",
                    "--bench=advent_bench",
                    "--package=advent_of_code_template"
                ],
                "filter": {
                    "name": "advent_bench",
                    "kind": "bench"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}"
        }
    ]
}